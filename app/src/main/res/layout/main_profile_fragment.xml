<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/WelcomeTextView"
        android:layout_width="287dp"
        android:layout_height="140dp"
        android:text="Welcome, username!"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/TotalMemoriesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Total memories:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/WelcomeTextView"
        app:layout_constraintStart_toStartOf="@+id/WelcomeTextView"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeTextView" />

    <TextView
        android:id="@+id/AccountIDTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Account ID:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TotalMemoriesTextView"
        app:layout_constraintStart_toStartOf="@+id/TotalMemoriesTextView"
        app:layout_constraintTop_toBottomOf="@+id/TotalMemoriesTextView" />

    <ImageButton
        android:id="@+id/ExitFromAccountButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_lock_lock" />
</androidx.constraintlayout.widget.ConstraintLayout>